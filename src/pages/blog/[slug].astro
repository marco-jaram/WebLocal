---
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await Astro.glob('../../posts/*.md');
  return posts.map(post => ({
    params: { slug: post.file.split('/').pop().split('.').shift() },
    props: { post },
  }));
}

const { Content, frontmatter } = Astro.props.post;
---

<Layout title={frontmatter.title}
description="Servicios de desarrollo web y redacción persuasiva que impulsan tu negocio en Tijuana."
keywords="redaccion de textos web, copywriter, creacion de sitios webs"
>
  <article class="article">
    <h1 class="article-h1">{frontmatter.title}</h1>
    <div class="article-div">
      <Content />
    </div>
  </article>
</Layout>

<style>
  /* Estilos para la página de blog */

/* Contenedor principal del artículo */
.article {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  
    color: #333;
}

/* Título principal del artículo */
.article-h1 {
    /* font-size: 2.5rem; */
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: #047857;
   
    border-bottom: 3px solid #00c2a8; /* Color que coincide con tu marca */
    padding-bottom: 0.5rem;
}

/* Contenedor del contenido */
.article-div {
    margin-top: 2rem;
}

/* Estilos para los elementos dentro del contenido */
.article-div h2 {
    font-size: 1.8rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #047857;
}

.article-div h3 {
    font-size: 1.5rem;
    margin-top: 1.8rem;
    margin-bottom: 0.8rem;
    color: #444;
}

.article-div p {
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
}

.article-div ul, 
.article-div ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
}

.article-div li {
    margin-bottom: 0.5rem;
}

.article-div a {
    color: #047857;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s ease;
}

.article-div a:hover {
    border-bottom-color: #00a896;
}

.article-div img {
    max-width: 100%;
    height: auto;
    border-radius: 6px;
    margin: 1.5rem 0;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.article-div blockquote {
    border-left: 4px solid #00c2a8;
    padding-left: 1rem;
    margin-left: 0;
    margin-right: 0;
    margin-bottom: 1.5rem;
    font-style: italic;
    color: #555;
}

.article-div code {
    font-family: monospace;
    background-color: #f5f5f5;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.9rem;
}

.article-div pre {
    background-color: #f5f5f5;
    padding: 1rem;
    border-radius: 6px;
    overflow-x: auto;
    margin-bottom: 1.5rem;
}

.article-div pre code {
    background-color: transparent;
    padding: 0;
}


/* Estilos adicionales para mejorar la experiencia de lectura */
.article-div table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
}

.article-div th,
.article-div td {
    padding: 0.75rem;
    border: 1px solid #ddd;
    text-align: left;
}

.article-div th {
    background-color: #f8f8f8;
    font-weight: 600;
}

.article-div tr:nth-child(even) {
    background-color: #f9f9f9;
}

/* Estilos para elementos de metadatos del blog, como fechas o categorías */
.article-metadata {
    display: flex;
    align-items: center;
    margin-bottom: 2rem;
    font-size: 0.9rem;
    color: #666;
}

.article-date {
    margin-right: 1rem;
}

.article-category {
    background-color: #e6f7f5;
    padding: 0.3rem 0.6rem;
    border-radius: 3px;
    color: #047857;
    font-weight: 500;
}

</style>