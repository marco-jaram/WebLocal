---
import Layout from '../../layouts/Layout.astro';
import FormularioBlog from '../../components/FormularioBlog.astro';
export async function getStaticPaths() {
  const posts = await Astro.glob('../../posts/*.md');
  return posts.map(post => ({
    params: { slug: post.file.split('/').pop().split('.').shift() },
    props: { post },
  }));
}

const { Content, frontmatter } = Astro.props.post;
---

<Layout title={frontmatter.title}
description="Servicios de desarrollo web y redacción persuasiva que impulsan tu negocio en Tijuana."
keywords="redaccion de textos web, copywriter, creacion de sitios webs"
>
  <article class="article">
    <h1 class="article-h1">{frontmatter.title}</h1>
    <div class="article-div">
      <Content />
    </div>
  </article>
  <FormularioBlog /> 

</Layout>

<style>
    /* Estilos generales para el artículo */
.article {
  max-width: 800px;
  margin: 0 auto;
  padding: 1.5rem;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  line-height: 1.7;
  color: #4a4a4a; /* Color de texto más suave */
  background-color: #fff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  border-radius: 8px;
}

/* Título principal */
.article-h1 {
  font-size: 2.5rem;
  margin-bottom: 1.5rem;
  padding-bottom: 0.75rem;
  border-bottom: 2px solid #f0f0f0;
  color: #2c3e50;
  font-weight: 700;
  line-height: 1.3;
}

/* Contenedor principal del contenido */
.article-div {
  font-size: 1.05rem;
}

/* Encabezados dentro del contenido */
.article-div h2 {
  font-size: 1.8rem;
  margin-top: 2.5rem;
  margin-bottom: 1rem;
  padding-top: 0.5rem;
  padding-top: 5rem;
  color: #2c3e50;
  border-top: 1px solid #f0f0f0;
}

.article-div h3 {
  font-size: 1.5rem;
  margin-top: 2rem;
  margin-bottom: 1rem;
  color: #3a506b;
}

.article-div h4 {
  font-size: 1.25rem;
  margin-top: 1.5rem;
  margin-bottom: 0.75rem;
  color: #3a506b;
}

/* Párrafos */
.article-div p {
  margin-bottom: 1.5rem;
}

/* Imágenes */
.article-div img {
  display: block;
  max-width: 100%;
  height: auto;
  margin: 2rem auto;
  border-radius: 6px;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
}

/* Videos e iframes */
.article-div iframe {
  display: block;
  max-width: 100%;
  margin: 2rem auto;
  border-radius: 6px;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
}

/* Listas */
.article-div ul,
.article-div ol {
  margin: 1.5rem 0 1.5rem 1rem;
  padding-left: 1.5rem;
}

.article-div li {
  margin-bottom: 0.75rem;
  color: #4a4a4a;
}

.article-div ul li {
  list-style-type: circle;
}

.article-div ul li::marker {
  color: #3a506b;
}

.article-div ol li::marker {
  color: #3a506b;
}

/* Bloques de código */
.article-div pre {
  background-color: #f8f9fa;
  padding: 1rem;
  border-radius: 4px;
  overflow-x: auto;
  margin: 1.5rem 0;
  border-left: 4px solid #3a506b;
}

.article-div code {
  font-family: "SFMono-Regular", Consolas, "Liberation Mono", Menlo, monospace;
  font-size: 0.9em;
  background-color: #f8f9fa;
  padding: 0.2em 0.4em;
  border-radius: 3px;
}

/* Citas */
.article-div blockquote {
  border-left: 4px solid #e0e0e0;
  padding-left: 1rem;
  margin-left: 0;
  margin-right: 0;
  font-style: italic;
  color: #666;
}

/* Enlaces */
.article-div a {
  color: #3a506b;
  text-decoration: none;
  border-bottom: 1px dotted #3a506b;
  transition: all 0.2s ease;
}

.article-div a:hover {
  color: #1a365d;
  border-bottom: 1px solid #1a365d;
}

/* Tablas */
.article-div table {
  width: 100%;
  border-collapse: collapse;
  margin: 2rem 0;
}

.article-div th,
.article-div td {
  padding: 0.75rem;
  border: 1px solid #e0e0e0;
}

.article-div th {
  background-color: #f8f9fa;
  font-weight: 600;
}

.article-div tr:nth-child(even) {
  background-color: #f8f9fa;
}

/* Línea horizontal */
.article-div hr {
  border: 0;
  height: 1px;
  background-color: #e0e0e0;
  margin: 2rem 0;
}

/* Elementos destacados */
.article-div strong {
  color: #1a365d;
  font-weight: 600;
}

.article-div em {
  font-style: italic;
}

/* Media queries para responsive */
@media (max-width: 768px) {
  .article {
    padding: 1rem;
  }
  
  .article-h1 {
    font-size: 2rem;
  }
  
  .article-div h2 {
    font-size: 1.6rem;
  }
  
  .article-div h3 {
    font-size: 1.4rem;
  }
}
</style>