<style>
  * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }
  
  html, body {
      height: 100%;
      overflow: hidden;
      background-color: #f8f9fa;
  }
  
  .container {
      display: flex;
      height: 100vh;
      max-width: 1800px;
      margin: 0 auto;
  }
  
  .image-container {
      flex: 0.8;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      background-color: #f4f4f4;
  }
  
  .image-container img {
      max-height: 90%;
      max-width: 90%;
      object-fit: contain;
      box-shadow: 0 10px 30px rgba(0,0,0,0.15);
      border-radius: 8px;
  }
  
  .content-container {
      flex: 1.2;
      padding: 40px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      max-height: 100vh;
  }
  
  .author {
      color: #4caf50;
      font-size: 16px;
      margin-bottom: 5px;
  }
  
  h1 {
      font-size: 36px;
      color: #333;
      margin-bottom: 10px;
      line-height: 1.1;
  }
  
  .subtitle {
      font-size: 15px;
      color: #666;
      margin-bottom: 15px;
      line-height: 1.5;
      max-width: 90%;
  }
  
 /* estilos formulario */
/* Estilos para el formulario */
.sendfox-form {
  max-width: 100%; /* Cambiado de 500px para ocupar todo el ancho disponible */
  margin: 0;       /* Eliminado el auto para alinearlo a la izquierda como en la imagen */
  padding: 0;      /* Eliminado el padding */
  background-color: transparent; /* Sin fondo */
  border-radius: 0;
  box-shadow: none; /* Eliminada la sombra */
}

.sendfox-form p {
  margin-bottom: 1px;
}

.sendfox-form label {
  display: none; /* Ocultar etiquetas ya que en el ejemplo no se ven */
}

.sendfox-form input[type="text"],
.sendfox-form input[type="email"] {
  width: 100%;
  padding: 12px 15px;
  border: 1px solid #ddd;
  border-radius: 6px;
  font-size: 16px;
  box-sizing: border-box;
  transition: border-color 0.3s;
  margin-bottom: 15px; /* Espacio entre campos */
}

.sendfox-form input[type="text"]:focus,
.sendfox-form input[type="email"]:focus {
  border-color: #4285f4;
  outline: none;
  box-shadow: 0 0 0 2px rgba(66, 133, 244, 0.2);
}

.sendfox-form button[type="submit"] {
  width: 100%;
  background-color: #4285f4; /* Mantén el azul o ajústalo para que coincida con tu diseño */
  color: white;
  border: none;
  padding: 14px 20px;
  font-size: 16px;
  font-weight: 500;
  border-radius: 6px;
  cursor: pointer;
  transition: background-color 0.3s;
  text-align: center;
}

.sendfox-form button[type="submit"]:hover {
  background-color: #3367d6;
}

/* Si necesitas que los campos estén uno al lado del otro en pantallas grandes */
@media (min-width: 768px) {
  .sendfox-form {
    display: flex;
    flex-direction: column;
    width: 100%;
  }
  
  /* Para crear más espacio entre los campos y el botón */
  .sendfox-form input[type="text"],
  .sendfox-form input[type="email"] {
    margin-bottom: 0px;
  }
}

 /* fin estilos formulario */

 
