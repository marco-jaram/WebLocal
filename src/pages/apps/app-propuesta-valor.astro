     */
    function generarPropuestas() {
        // Mostrar indicador de carga
        if (mensajeCarga) {
            mensajeCarga.classList.add("visible");
            mensajeCargaTexto.textContent = "Generando propuestas...";
        }
        
        // Obtener datos del formulario
        const datos = recopilarDatosFormulario();
        
        // Verificar si todos los campos están vacíos
        const todoVacio = TODOS_CAMPOS.every(campo => {
            const elemento = document.getElementById(campo);
            return !elemento || !elemento.value || elemento.value.trim() === '';
        });
        
        // Si todo está vacío, usar los datos de ejemplo
        if (todoVacio) {
            for (let campo in EJEMPLO_DATOS) {
                datos[campo] = EJEMPLO_DATOS[campo];
            }
        }
        
        // Guardar datos en localStorage
        localStorage.setItem("propuestaValorDatos", JSON.stringify(datos));
        
