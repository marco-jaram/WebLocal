            // Fórmula A
            for (let i = 1; i <= 3; i++) {
                document.getElementById(`cliente-potencial${i}`).textContent = 
                    datos[`respuesta-cliente-potencial${i}`] || "_________";
                    
                document.getElementById(`problema-dolor${i}`).textContent = 
                    datos[`respuesta-puntos-dolor${i}`] || "_________";
                    
