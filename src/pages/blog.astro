    color: #047857;
}

.hover\:underline:hover {
    text-decoration: underline;
}

.text-gray-500 {
    color: #6b7280;
}

.text-2xl {
   
    line-height: 2rem;
}

.mb-4 {
    margin-bottom: 1rem;
}
</style>