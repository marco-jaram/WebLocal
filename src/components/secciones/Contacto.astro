<section class="contenedor-contacto">
    <div class="contacto-grid contenedor">
        <div class="contacto-texto">
            <h1></h1>
            <form id="myForm" target="_blank"  method="POST">
                <div class="contenido-form">
                    <div class="datos-form">
                        <input
                            type="text"
                            name="name"
                            class="form-control"
                            placeholder="Full Name"
                            required
                        />
                        <input
                            type="email"
                            name="email"
                            class="form-control"
                            placeholder="Email Address"
                            required
                        />
                    </div>
                    <div class="mensaje-form">
                        <textarea
                            placeholder="Your Message"
                            class="form-control"
                            name="message"
                            rows="10"
                            required
                        ></textarea>
                    </div>
                    <button type="submit" class="boton-contacto">Enviar</button>
                </div>
            </form>
            <div id="message" style="display:none; color: green; margin-top: 20px;">
                ¡Mensaje enviado, gracias :)!
            </div>
        </div>
    </div>
</section>

<script>
    document.getElementById('myForm').addEventListener('submit', function(event) {
        event.preventDefault();
        const formData = new FormData(this);
        fetch('https://formsubmit.co/marco.jaramillocast@gmail.com', {
            method: 'POST',
            body: formData,
        })
        .then(response => {
            if (response.ok) {
                document.getElementById('message').style.display = 'block';
                document.getElementById('myForm').reset(); // Opcional: limpiar el formulario después de enviar
            } else {
                alert('Hubo un problema al enviar el formulario.');
            }
        })
        .catch(error => {
            alert('Hubo un error: ' + error.message);
        });
    });
</script>

    <style>
        .datos-form {
            display: flex;
            flex-direction: column;
        }

        .contenido-form {
        }
    </style>

